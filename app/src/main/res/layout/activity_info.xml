<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.texasfoodmenu.aleinux.texasmenu.info">

    <TextView
        android:id="@+id/texas"
        android:textSize="46sp"
        android:text="Texas"
        android:textColor="@color/rosso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/info"
        android:id="@+id/info_texas"
        android:layout_below="@+id/texas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp" />
    <TextView
        android:id="@+id/cell"
        android:textSize="36sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_texas"
        android:layout_alignLeft="@+id/texas"
        android:layout_alignStart="@+id/texas" />

    <TextView
        android:id="@+id/createdby"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/createdby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/numeroVersione"
        android:id="@+id/numeroVersione"
        android:layout_above="@+id/createdby"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/versione"
        android:id="@+id/textView2"

        android:layout_above="@+id/numeroVersione"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
